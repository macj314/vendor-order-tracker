@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>Here are all the orders taken by your vendor:</h3>

@if (@Model["orders"].Count == 0)
{
  <h4>You have no orders for this vendor...</h4>
}

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Price</a></li>
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Date</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add A New Order</a></p>
<p><a href='/vendors'>Return to Vendor List</a></p>
<p><a href='/'>Return to Main Page</a></p>